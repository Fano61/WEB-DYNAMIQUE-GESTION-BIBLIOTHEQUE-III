<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="3.1">

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.maBibliotheque.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EmpruntServlet</servlet-name>
        <servlet-class>com.maBibliotheque.servlet.EmpruntServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmpruntServlet</servlet-name>
        <url-pattern>/emprunt</url-pattern>
    </servlet-mapping>

    <servlet>
    <servlet-name>RetourServlet</servlet-name>
    <servlet-class>com.maBibliotheque.servlet.RetourServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>RetourServlet</servlet-name>
    <url-pattern>/retour</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>DashboardServlet</servlet-name>
    <servlet-class>com.maBibliotheque.servlet.DashboardServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>DashboardServlet</servlet-name>
    <url-pattern>/dashboard</url-pattern>
</servlet-mapping>


    <!-- Session timeout 30min -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>
